<link rel=stylesheet href="css/user.css" type="text/css">
 
<script type="text/javascript">
	
	function login() {
		if (f.u_id.value == "") {
			alert("아이디를 입력하세요.");
			f.u_id.focus(); //userId부분을 u_id로 변경
			return false;
		}
		if (f.u_password.value == "") {
			alert("비밀번호를 입력하세요.");
			f.u_password.focus(); //password를 u_password로 변경
			return false;
		}

		f.action = "user_login_action.jsp";
		f.submit();
	}
</script>
</head>
